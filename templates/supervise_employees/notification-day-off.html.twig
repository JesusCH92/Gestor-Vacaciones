
    <div class="row"><!-- ? Ventana de solicitud por usuario -->

        <div class="col-xl-12 col-md-12 col-12 mt-1 mb-1">
            <div class="container" id="informacion-solicitud-usuario">

                <div class="row">
                    <h5 class="col-12 subtitulo-solicitud">Información del Solicitante</h5>
                    <form class="col-12">
                        <input type="hidden" id="day-off-form-id" value="{{ dayoff.codeDayOffForm }}">
                        <div class="form-group">
                            <label class="datos-usuario">Nombre:</label>
                            <label for="name">{{ dayoff.user.name }}</label>
                        </div>
                        <div class="form-group">
                            <label class="datos-usuario">Apellidos:</label>
                            <label for="lastname">{{ dayoff.user.lastname }}</label>
                        </div>
                        <div class="form-group">
                            <label class="datos-usuario">Departamento:</label>
                            <label for="department">{{ dayoff.user.getDepartment.departmentName }}</label>
                        </div>
                        <div class="form-group">
                            <label class="datos-usuario">Tipo de solicitud:</label>
                            <label for="type-day-off">{{ dayoff.typeDayOff }}</label>
                        </div>
                        <div class="form-group">
                            <button type="button" id="datos-usuario-btn" class="btn btn-link text-dark datos-usuario" data-toggle="collapse" data-target="#peticion-dias-vacaciones" aria-expanded="true" aria-controls="peticion-dias-vacaciones">
                                Días solicitados de vacaciones:</button>
                            <div id="peticion-dias-vacaciones" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body">
                                    <ul class="list-group">
                                        {% for date in dayOffRequest %}
                                        <li class="list-group-item">{{ date.dayOffSelected.dayOffSelected|date('Y-m-d') }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <hr class="col-11">

                        <h5 class="col-12 px-0 subtitulo-solicitud">Resolución de la petición</h5>
                        <div class="form-group">
                            <label class="datos-usuario" for="supervisor-comment">Comentario:</label>
                            <textarea class="form-control" id="supervisor-comment" rows="3"></textarea>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6 col-6 d-flex justify-content-end">
                                <button type="button" class="btn btn-outline-success" id="approveDayOffFormEmployee">Aceptar</button>
                            </div>

                            <div class="form-group col-md-6 col-6 d-flex justify-content-start">
                                <button type="button" class="btn btn-outline-danger" id="deniedDayOffFormEmployee">Denegar</button>
                            </div>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

