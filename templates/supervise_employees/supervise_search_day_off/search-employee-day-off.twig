{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Edit Calendar{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
{% endblock %}

{% block main_dashboard %}
    <div class="p-3 mb-3 bg-light rounded">
        <h3 class="title-block-workspace center-title">DÃ­as de vacaciones de los usuarios</h3>
    </div>
    <div class="container">{# ! Buscador de Usuario en vacaciones #}

        <div class="container justify-content-center formulario-area">
            <h4>Buscar empleados</h4>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="filter-department">Filtrar por departamento:</label>
                        <select id="filter-department" class="form-control">
                            <option selected value="0">Todos los departamentos</option>
                            {% for depart in department %}
                            <option value="{{ depart.departmentId }}">{{ depart.departmentName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="name-filter">Filtrar por nombre:</label>
                        <input type="text" class="form-control" id="name-filter">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="filtrador">Buscador:</label>
                        <button type="button" class="form-control btn btn-outline-primary days-off-filter" id="days-off-filter-user">Filtrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>{# ! ? Fin del Buscador de Usuario en vacaciones #}
    <hr class="my-4 col-12">
    <div class="filter-user-day-off-container">

    </div>


{% endblock %}

{% block head_js %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/../assets/js/SuperviseEmployees/DaysOffEmployees/daysOffModel.js"></script>
    <script type="text/javascript" src="/../assets/js/SuperviseEmployees/DaysOffEmployees/userInDayOffRenderTemplate.js"></script>
    <script type="text/javascript" src="/../assets/js/SuperviseEmployees/DaysOffEmployees/userInDayOffController.js"></script>
    <script type="text/javascript" src="/../assets/js/SuperviseEmployees/DaysOffEmployees/daysOffConfigController.js"></script>

{% endblock %}